<div class="wrapper">
    {{> header}}
    <main class="main">
        <div class="uk-container">
            {{> navigation/primary-nav}}
            <div class="uk-grid">
                <div class="uk-width-4-5@m">
                    <div class="uk-box-shadow-xlarge uk-padding">

                        <p>Please contact us and one of our helpfully staff will reach out to you.</p>

                        <form>
                            <div class="uk-margin">
                                <input class="uk-input message-name" type="text" placeholder="Name">
                            </div>
                            <div class="uk-margin">
                                <input class="uk-input message-email" type="email" placeholder="Email">
                            </div>
                            <div class="uk-margin">
                                <textarea class="uk-textarea message-message" rows="5" placeholder="Message"></textarea>
                            </div>
                            <button
                                class="uk-button uk-button-default uk-width-1-1 uk-margin-small-bottom btn-flex-size btn-message-message">Send
                                Message</button>
                        </form>

                        <h4>Site Admins</h4>
                        <ul class="uk-list uk-list-divider uk-list-striped">
                            {{#each User}}
                            {{> admin}}
                            {{/each}}
                        </ul>
                    </div>

                </div>
                <div class="uk-width-1-5@m">
                    {{> chat}}
                </div>
            </div>
        </div>
    </main>
    <div class="push"></div>
    {{> footer}}
</div>
<!-- App scripts and css-->
<script src="/js/member-contact.js"></script>