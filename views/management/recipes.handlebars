<div class="wrapper">
  {{> header}}
  <main class="main">
    <div class="uk-container">
      {{> navigation/primary-nav}}
      <div class="uk-grid">
        <div class="uk-width-4-5">
          <div class="uk-box-shadow-xlarge uk-padding">
            <legend class="uk-legend">Manage Recipes</legend>
            <p>Add, edit and delete Recipes.</p>
            <form class="uk-grid-small create-form" id="create-form">
              <div class="uk-margin-small uk-grid-small uk-grid" uk-grid="">
                <div class="uk-width-expand uk-first-column">
                  <input type="text" class="uk-input recipe-name" id="recipe-name" name="name"
                    placeholder="new recipe name...">
                </div>
                <div class="uk-width-auto">
                  <label for="recipe-portion">Portions:</label>
                </div>
                <div class="uk-width-auto">
                  <input type="number" class="uk-input recipe-portion" id="recipe-portion" name="name"
                    placeholder="recipe portion..." min="1" value="1">
                </div>
              </div>
              <div class="uk-width-auto">
                <textarea class="uk-textarea recipe-instruction" rows="3" id="recipe-instruction" type="text"
                  placeholder="recipe instructions...">{{this.dataValues.address}}</textarea>
              </div>

              <div class="uk-margin-small uk-grid-small uk-grid" uk-grid="">
                <div class="uk-width-auto uk-first-column">
                  <label for="category-list">Select at least one category:</label>
                </div>
                <div class="uk-width-expand uk-first-column">
                  <select class="uk-select category-dropdown-list">
                  </select>
                </div>
                <div class="uk-width-auto">
                  <button class="uk-button btn-flex-size uk-width-1-1 btn-add-category">Add Category</button>
                </div>
              </div>
              <div>
                <ul class="uk-list uk-list-divider uk-list-striped recipe-Categories">

                </ul>
              </div>

              <div class="uk-margin-small uk-grid-small uk-grid" uk-grid="">
                <div class="uk-width-auto uk-first-column">
                  <label for="category-list">Select at least one ingredient:</label>
                </div>
                <div class="uk-width-expand uk-first-column">
                  <select class="uk-select ingredient-dropdown-list">
                  </select>
                </div>
                <div class="uk-width-auto">
                  <button class="uk-button btn-flex-size uk-width-1-1 btn-add-ingredient">Add Ingredient</button>
                </div>
              </div>
              <div>
                <ul class="uk-list uk-list-divider uk-list-striped recipe-Ingredients">

                </ul>
              </div>

              <br>
              <div class="uk-width">
                <button class="uk-button btn-flex-size uk-width-1-1 btn-add-recipe">Add Recipe</button>
              </div>
              <div style="display: none" id="alert" role="alert">
                <span class="msg"></span>
              </div>
            </form>
          </div>
          <div class="uk-box-shadow-xlarge uk-padding">
            <ul class="uk-list uk-list-divider uk-list-striped">
              {{#each Recipe}}
              {{> row-item text=this.dataValues.name}}
              {{/each}}
            </ul>
          </div>
        </div>
        <div class="uk-width-1-5">
          {{> chat}}
        </div>
      </div>
    </div>
  </main>
  {{> footer}}
</div>
<!-- App scripts and css-->
<script src="/js/admin-recipe.js"></script>