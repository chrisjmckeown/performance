<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet">

<div class="login-img">
    <div class="uk-container">
        <div class="wrapper">
            <div class="uk-grid uk-flex-center uk-grid-match" data-uk-grid-match="{target:'.uk-panel'}">
                <div class="uk-width-1-2@m uk-padding-remove">
                    <div class="uk-card uk-card-default uk-card-body sign-in sign-in-form">
                        <div class="uk-position-center uk-overlay uk-overlay-default">
                            <h1>Spin-that-Meal</h1>
                            <form class="login">
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="uk-input" id="login-email-input" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" class="uk-input" id="login-password-input"
                                        placeholder="Password">
                                </div>
                                <div style="display: none" id="alertlogin" role="alert">
                                    <span class="msglogin"></span>
                                </div>
                                <br>
                                <button class="uk-button uk-button-default uk-button-large uk-width-1-1"
                                    type="submit">Login</button>
                            </form>
                                <br>
                            <button
                                class="uk-button uk-button-default uk-button-large uk-width-1-1 forgot-password">Forgot Password</button>
                        </div>
                    </div>
                    <div class="uk-card uk-card-default uk-card-body sign-in-switch sign-in-form">
                        <div class="uk-position-center uk-overlay uk-overlay-default uk-text-center sign-in-switch">
                            <h1>Welcome back!</h1>
                            <p>To keep connected please login with your person info</p><br><br>
                            <form class="sign-ip-form">
                                <button class="uk-button uk-button-default uk-button-large uk-width-1-1"
                                    type="submit">SIGN
                                    IN</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-2@m uk-padding-remove">
                    <div class="uk-card uk-card-default uk-card-body sign-up sign-in-form">
                        <div class="uk-position-center uk-overlay uk-overlay-default">
                            <h1>Create an Account</h1>
                            <form class="signup">
                                <div class="uk-grid uk-flex-center uk-grid-match"
                                    data-uk-grid-match="{target:'.uk-panel'}">
                                    <div class="uk-width-1-2">
                                        <div class="form-group">
                                            <label for="first-name">First Name</label>
                                            <input type="text" class="uk-input" id="first-name-input"
                                                placeholder="First Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="last-name">Last Name</label>
                                            <input type="text" class="uk-input" id="last-name-input"
                                                placeholder="Last Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="username">User Name</label>
                                            <input type="text" class="uk-input" id="username-input"
                                                placeholder="UserName">
                                        </div>
                                    </div>
                                    <div class="uk-width-1-2">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Email address</label>
                                            <input type="email" class="uk-input" id="signup-email-input"
                                                placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Password</label>
                                            <input type="password" class="uk-input" id="signup-password-input"
                                                placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <label for="phone">Phone</label>
                                            <input type="text" class="uk-input" id="phone-input"
                                                placeholder="(00) 00000000">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input type="text" class="uk-input" id="address-input" placeholder="Address">
                                </div>
                                <div style="display: none" id="alert" role="alert">
                                    <span class="msg"></span>
                                </div>
                                <br>
                                <button class="uk-button uk-button-default uk-button-large uk-width-1-1"
                                    type="submit">Sign
                                    Up</button>
                            </form>
                        </div>
                    </div>
                    <div class="uk-card uk-card-default uk-card-body sign-up-switch sign-in-form">
                        <div class="uk-position-center uk-overlay uk-overlay-default uk-text-center sign-up-switch ">
                            <h1>Hello there!</h1>
                            <p>Enter your personal details and start your journey with us!!!</p><br><br>
                            <form class="sign-up-form">
                                <button class="uk-button uk-button-default uk-button-large uk-width-1-1"
                                    type="submit">SIGN
                                    UP</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="uk-container">
    <div class="uk-child-width-1-3@s uk-grid-match" uk-grid>
        <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body message">
                <h3 class="uk-text-center">Recipe creation</h3>
                <p class="uk-text-center">Build your own recipes and share them with other members.</p>
            </div>
        </div>
        <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body message">
                <h3 class="uk-text-center">Playlist</h3>
                <p class="uk-text-center">Orangise recipes but playlists.</p>
            </div>
        </div>
        <div>
            <div class="uk-card uk-card-default uk-card-hover uk-card-body message">
                <h3 class="uk-text-center">Chat</h3>
                <p class="uk-text-center">Discuss recipes with follow members.</p>
            </div>
        </div>
    </div>
</div>
